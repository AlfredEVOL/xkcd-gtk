<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop">
  <id>com.github.rkoesters.xkcd-gtk</id>

  <provides>
    <binary>com.github.rkoesters.xkcd-gtk</binary>
  </provides>

  <name>Comic Sticks</name>
  <summary>Browse xkcd comics</summary>
  <description>
    <p>Comic Sticks lets you view xkcd comics and cache them offline.</p>
    <p>Features include:</p>
    <ul>
      <li>Search for comics</li>
      <li>View comic metadata</li>
      <li>Cache comics for later offline viewing</li>
    </ul>
  </description>
  <url type="homepage">https://github.com/rkoesters/xkcd-gtk</url>
  <url type="bugtracker">https://github.com/rkoesters/xkcd-gtk/issues</url>

  <developer_name>Ryan Koesters</developer_name>
  <metadata_license>CC0</metadata_license>
  <project_license>GPL-3.0+</project_license>

  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/rkoesters/xkcd-gtk/master/screenshots/screenshot-1.png</image>
    </screenshot>
    <screenshot>
